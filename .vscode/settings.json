{
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true,
		"**/__pycache__": true
	},
	"explorerExclude.backup": {},
	"[python]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "ms-python.black-formatter"
	},
	"black-formatter.args": ["--line-length", "79"],
	"editor.rulers": [79]
}
